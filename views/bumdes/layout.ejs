<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bumdes | <%= title %>
    </title>
    <%- include('./head') %> 
</head>

<body class="hold-transition sidebar-mini  ">
    <!-- Site wrapper -->
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars text-dark"></i></a>
                </li>
            </ul>
            <a href="/bumdes"
                class="d-flex brand-link p-0 align-items-center my-auto mx-auto text-light text-decoration-none">
                <img src="/images/brand.png" alt="Logo" class="brand-image img-circle" style="opacity: .8">
                <span class=" font-weight-bold text-dark" style="font-family: 'Dancing Script';">Banyumala
                    Waterfall</span>
            </a>
            <!-- Right navbar links -->
            <ul class="navbar-nav ">
                <form action="/logout?_method=DELETE" method="POST">
                    <button class="nav-link d-flex align-items-center text-dark" type="submit">
                        <i class="fa-solid fa-right-from-bracket"></i>
                        <span class="ml-3 d-none d-md-inline">Log Out</span>
                    </button>
                </form>
            </ul>
        </nav>
        <!-- /.navbar -->

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-1 rounded-right ">
            <!-- Brand Logo -->
            <a href="/bumdes" class="brand-link">
                <img src="/images/brand.png" alt="AdminLTE Logo" class="brand-image img-circle"
                    style="opacity: .8; filter:brightness(250%);">
                <span class="brand-text font-weight-light font-weight-bold">Kepala Bumdes</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- SidebarSearch Form -->
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav  nav-sidebar flex-column" data-widget="treeview" role="menu"
                        data-accordion="false">
                        <li class="nav-item">
                            <% if (title=='Dashboard' ) { %>
                                <a href="/bumdes" class="nav-link text-white">
                                    <i class="nav-icon fa-solid fa-chart-column"></i>
                                    <p>Dashboard</p>
                                </a>
                                <% } else { %>
                                    <a href="/bumdes" class="nav-link ">
                                        <i class="nav-icon fa-solid fa-chart-column"></i>
                                        <p>Dashboard</p>
                                    </a>
                                <% } %>
                        </li>
                        <li class="nav-item">
                            <% if (title=='Transactions' ) { %>
                                <a href="/bumdes/transactions?month=all" class="nav-link text-white">
                                    <i class="nav-icon fa-solid fa-dollar-sign"></i>
                                    <p>Transaction</p>
                                </a>
                                <% } else { %>
                                    <a href="/bumdes/transactions?month=all" class="nav-link">
                                        <i class="nav-icon fa-solid fa-dollar-sign"></i>
                                        <p>Transaction</p>
                                    </a>
                                    <% } %>

                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>
                                <%= title %>
                            </h1>
                        </div>
                        <div class="col-sm-6">
                            
                        </div>
                    </div>
                </div><!-- /.container-fluid -->
            </section>

            <!-- Main content -->
            <main>
                <%- body %>
            </main>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">

            </div>
            <strong>Copyright &copy; 2022 </strong> All rights
            reserved.
        </footer>

        
    </div>
    <!-- ./wrapper -->


    <!-- AdminLTE App -->
    <script src="/javascripts/adminlte.js"></script>

</body>

</html>